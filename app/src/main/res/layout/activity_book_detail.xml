<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".BookDetailActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_marginTop="20dp"
            android:background="#C2CBDE"
            app:layout_constraintTop_toBottomOf="@id/tvNombre2"
            app:layout_constraintBottom_toBottomOf="@id/tvAnio2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
    >

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="#DEDCD0"
            app:layout_constraintTop_toBottomOf="@id/tvAutor2"
            app:layout_constraintBottom_toTopOf="@id/npNumPagLeidas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPortada2"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.1"
    />
    <ImageView
            android:id="@+id/ivPortada2"
            android:layout_width="160dp"
            android:layout_height="210dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.1"
    />

    <TextView
            android:id="@+id/tvNombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La Biblia"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

    <TextView
            android:id="@+id/tvAutor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diosito"
            android:textStyle="bold"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toEndOf="@id/ivPortada2"
            app:layout_constraintTop_toBottomOf="@id/tvNombre2"
            app:layout_constraintVertical_bias="0.06" />

    <TextView
            android:id="@+id/tvAnio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            app:layout_constraintTop_toBottomOf="@id/ivPortada2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.05"/>
    <TextView
            android:id="@+id/tvRating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.66"
            app:layout_constraintTop_toBottomOf="@id/ivPortada2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvAnio2"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintVertical_bias="0.05"/>


    <TextView
            android:id="@+id/tvSinopsis"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Lorem ipsum odor amet, consectetuer adipiscing elit. Facilisis conubia ante ex volutpat in magna. Arcu porta nam fermentum eget ultrices mollis. Auctor porta cursus fermentum nostra natoque lacinia torquent. Tortor faucibus finibus est vitae nisi. Laoreet tempus proin nisi turpis quis malesuada id proin fermentum. Aptent himenaeos vitae erat diam nibh enim pulvinar ullamcorper. Mollis convallis ligula phasellus etiam parturient netus. Fames vitae elit placerat erat tortor odio dolor dictum integer."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toEndOf="@id/ivPortada2"
            app:layout_constraintTop_toBottomOf="@id/tvAutor2"
            app:layout_constraintVertical_bias="0.068" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="180dp"
            android:layout_height="74dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSinopsis"
            app:layout_constraintVertical_bias="0.12">

        <TextView
                android:id="@+id/tvGeneros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ficcion, Espiritual"
                android:textStyle="italic"
                app:flow_horizontalAlign="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Spinner
            android:id="@+id/spEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAnio2"
            app:layout_constraintVertical_bias="0.1" />

    <NumberPicker
            android:id="@+id/npNumPagLeidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.582"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSinopsis"
            app:layout_constraintVertical_bias="0.159" />

    <TextView
            android:id="@+id/tvNumPag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="420"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toEndOf="@id/npNumPagLeidas"
            app:layout_constraintTop_toBottomOf="@id/tvAnio2"
            app:layout_constraintVertical_bias="0.1" />

    <TextView
            android:id="@+id/tvOtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvNumPag"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toEndOf="@id/npNumPagLeidas"
            app:layout_constraintTop_toBottomOf="@id/tvAnio2"
            app:layout_constraintVertical_bias="0.1" />

    <TextView
            android:id="@+id/tvOtro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pÃ¡g."
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toEndOf="@id/tvNumPag"
            app:layout_constraintTop_toBottomOf="@id/tvAnio2"
            app:layout_constraintVertical_bias="0.1" />
    <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/spEstado"
            app:layout_constraintTop_toBottomOf="@id/tvAnio2"
            app:layout_constraintVertical_bias="0.067" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/layoutListView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spEstado"
            app:layout_constraintVertical_bias="0.7" />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spEstado">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
            <ListView
                    android:id="@+id/lvReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/darker_gray"
            />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>