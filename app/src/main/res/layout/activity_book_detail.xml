<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".BookDetailActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/tvNombre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Biblia"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginTop="20dp"
                android:background="#C2CBDE"
                app:layout_constraintTop_toBottomOf="@id/tvNombre2"
                app:layout_constraintBottom_toBottomOf="@id/tvAnio2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0"
        >

            <RelativeLayout
                    android:layout_width="210dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="#DEDCD0"
                    app:layout_constraintTop_toBottomOf="@id/tvAutor2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivPortada2"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintVertical_bias="0.1"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="3dp"
                    android:id="@+id/relativeLayout">
                <TextView
                        android:id="@+id/tvSinopsis"
                        android:layout_width="177dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Lorem ipsum odor amet, consectetuer adipiscing elit. Facilisis conubia ante ex volutpat in magna. Arcu porta nam fermentum eget ultrices mollis. Auctor porta cursus fermentum nostra natoque lacinia torquent. Tortor faucibus finibus est vitae nisi. Laoreet tempus proin nisi turpis quis malesuada id proin fermentum. Aptent himenaeos vitae erat diam nibh enim pulvinar ullamcorper. Mollis convallis ligula phasellus etiam parturient netus. Fames vitae elit placerat erat tortor odio dolor dictum integer."
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.565"
                        app:layout_constraintVertical_bias="0.068" android:layout_alignParentBottom="true"
                        android:layout_marginBottom="19dp" android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp" android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                        android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/tvAutor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="diosito"
                    android:textStyle="bold"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivPortada2"
                    app:layout_constraintVertical_bias="0.06" android:layout_marginTop="10dp"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_marginBottom="13dp" android:layout_toEndOf="@+id/ivPortada2"
                    android:layout_marginStart="17dp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="157dp"
            />
            <ImageView
                    android:id="@+id/ivPortada2"
                    android:layout_width="160dp"
                    android:layout_height="210dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintHorizontal_bias="0.1"
            />
            <TextView
                    android:id="@+id/tvAnio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015"
                    app:layout_constraintTop_toBottomOf="@id/ivPortada2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.13"
                    app:layout_constraintVertical_bias="0.05" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp" android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp" android:layout_marginTop="16dp"
                    android:layout_below="@+id/ivPortada2" android:layout_toStartOf="@+id/tvRating2"
                    android:layout_marginEnd="52dp"/>
            <TextView
                    android:id="@+id/tvRating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.66"
                    app:layout_constraintTop_toBottomOf="@id/ivPortada2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvAnio2"
                    app:layout_constraintHorizontal_bias="0.14"
                    app:layout_constraintVertical_bias="0.05" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="249dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="37dp" android:layout_marginTop="18dp"
                    android:layout_below="@+id/ivPortada2"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="192dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.878"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.12" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" android:layout_marginTop="5dp"
                    android:layout_below="@+id/tvAutor2">

                <TextView
                        android:id="@+id/tvGeneros"
                        android:layout_width="201dp"
                        android:layout_height="37dp"
                        android:text="Ficcion, Espiritual"
                        android:textStyle="italic"
                        app:flow_horizontalAlign="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="122dp">

            <Spinner
                    android:id="@+id/spEstado"
                    android:layout_width="108dp"
                    android:layout_height="35dp"

                    app:layout_constraintHorizontal_bias="0.167"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0" android:layout_toStartOf="@+id/tvOtro2"
                    android:layout_marginEnd="38dp"
                    android:layout_marginBottom="43dp" android:layout_marginTop="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="31dp"
                    android:layout_alignParentBottom="true"/>

            <NumberPicker
                    android:id="@+id/npNumPagLeidas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.582"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.159"
                    android:layout_marginEnd="9dp" android:layout_toStartOf="@+id/tvOtro"/>
            <TextView
                    android:id="@+id/tvNumPag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="420"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.458"
                    app:layout_constraintStart_toEndOf="@id/npNumPagLeidas"
                    app:layout_constraintVertical_bias="0.1" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="28dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp" android:layout_marginTop="52dp"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:id="@+id/tvOtro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="de"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvNumPag"
                    app:layout_constraintHorizontal_bias="0.589"
                    app:layout_constraintStart_toEndOf="@id/npNumPagLeidas"
                    app:layout_constraintVertical_bias="0.1" android:layout_toStartOf="@+id/tvNumPag"
                    android:layout_marginEnd="20dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="52dp" android:layout_marginTop="51dp"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:id="@+id/tvOtro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pág."
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.263"
                    app:layout_constraintVertical_bias="0.1" android:layout_toStartOf="@+id/tvNumPag"
                    android:layout_marginEnd="115dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="54dp" android:layout_marginTop="49dp"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/spEstado"
                    app:layout_constraintVertical_bias="0.067" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="125dp" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp" android:layout_marginTop="53dp"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                    android:layout_marginStart="254dp"/>

        </RelativeLayout>



        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        />
                <LinearLayout
                        android:id="@+id/layoutlistcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <ListView
                            android:id="@+id/lvReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="true"
                            android:divider="@android:color/darker_gray"
                            android:dividerHeight="1dp"/>
                </LinearLayout>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Hacer una review"
                        android:id="@+id/btnReview"
                />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>