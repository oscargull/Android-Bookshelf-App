<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Style" >


        <SwitchPreference
                android:defaultValue="false"
                android:key="dark_mode"
                android:title="Dark theme" />


    </PreferenceCategory>



   <PreferenceCategory  android:title="Aplicación">
        <MultiSelectListPreference
                android:title="Cambiar idioma"
                android:key="list_preference_idioma"
                android:entries="@array/idioma"
                android:entryValues="@array/idioma_values"
                android:defaultValue="@array/idioma_default"
                android:summary="Español" />
       <SwitchPreference
       android:title="Keep me logged in"
       android:key="keep_logged_in"
       android:defaultValue="false"/>


    </PreferenceCategory>
</PreferenceScreen>